<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_grey">

    <include layout="@layout/toolbar_toolbar"/>

    <Button
        android:id="@+id/management_record"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@drawable/custom_button"
        android:text="@string/commuting_record"

        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintBottom_toTopOf="@+id/management_settings"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.2"
        />
    <Button
        android:id="@+id/management_settings"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@drawable/custom_button"
        android:text="@string/time_setting"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/management_record"
        />


</androidx.constraintlayout.widget.ConstraintLayout>