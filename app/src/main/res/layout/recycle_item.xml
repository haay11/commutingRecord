<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@drawable/custom_button2"

        >
        <TextView
            android:id="@+id/recycle_list_name"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="이름"
            android:textColor="@color/black_two"
            android:textSize="14sp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/recycle_list_time"
            android:layout_width="50dp"
            android:layout_height="19dp"
            android:text="11:00"
            android:textSize="14sp"
            android:textColor="@color/dark"
            android:gravity="center"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/recycle_list_line"
            android:layout_marginRight="13dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            />
        <TextView
            android:id="@+id/recycle_list_line"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="|"
            android:textColor="@color/pinkish_grey"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="13dp"
            app:layout_constraintRight_toLeftOf="@+id/recycle_list_time2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintHorizontal_chainStyle="packed"
            />
        <TextView
            android:id="@+id/recycle_list_time2"
            android:layout_width="50dp"
            android:layout_height="19dp"
            android:text="근무중"
            android:textSize="14sp"
            android:textColor="@color/dark"
            android:gravity="center"

            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintHorizontal_chainStyle="packed"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>